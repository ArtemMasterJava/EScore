<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/dota2logo"
    tools:context="com.anohin.artem.retrofitdemo.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match1_team1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match2_team1"
        android:layout_below="@+id/textView_match1_team1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_match1_team1"
        android:layout_alignEnd="@+id/textView_match1_team1"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match3_team1"
        android:layout_below="@+id/textView_match2_team1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_match2_team1"
        android:layout_alignEnd="@+id/textView_match2_team1"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match4_team1"
        android:layout_below="@+id/textView_match3_team1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView_match3_team1"
        android:layout_alignEnd="@+id/textView_match3_team1"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="110dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match1_score"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_match1_team1"
        android:layout_toEndOf="@+id/textView_match1_team1"
        android:gravity="center_horizontal"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match2_score"
        android:layout_above="@+id/textView_match3_score"
        android:layout_alignRight="@+id/textView_match1_score"
        android:layout_alignEnd="@+id/textView_match1_score"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_match1_team1"
        android:layout_toRightOf="@+id/textView_match2_team1"
        android:layout_toEndOf="@+id/textView_match2_team1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match3_score"
        android:layout_above="@+id/textView_match4_score"
        android:layout_alignRight="@+id/textView_match2_score"
        android:layout_alignEnd="@+id/textView_match2_score"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_match2_team1"
        android:layout_toRightOf="@+id/textView_match3_team1"
        android:layout_toEndOf="@+id/textView_match3_team1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match4_score"
        android:layout_below="@+id/textView_match3_team1"
        android:layout_alignLeft="@+id/textView_match3_score"
        android:layout_alignStart="@+id/textView_match3_score"
        android:layout_alignRight="@+id/textView_match3_score"
        android:layout_alignEnd="@+id/textView_match3_score"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView_match4_team1" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match1_team2"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match2_team2"
        android:layout_alignTop="@+id/textView_match2_score"
        android:layout_alignLeft="@+id/textView_match1_team2"
        android:layout_alignStart="@+id/textView_match1_team2"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match3_team2"
        android:layout_above="@+id/textView_match4_team2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_match2_score"
        android:layout_toRightOf="@+id/textView_match2_score2"
        android:layout_toEndOf="@+id/textView_match2_score2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match4_team2"
        android:layout_below="@+id/textView_match3_score"
        android:layout_alignLeft="@+id/textView_match3_team2"
        android:layout_alignStart="@+id/textView_match3_team2"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView_match4_score" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match1_score2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView_match1_team2"
        android:layout_alignBottom="@+id/textView_match1_team2"
        android:gravity="center_horizontal"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match2_score2"
        android:layout_above="@+id/textView_match3_team2"
        android:layout_alignLeft="@+id/textView_match1_score2"
        android:layout_alignStart="@+id/textView_match1_score2"
        android:layout_alignTop="@+id/textView_match2_team2"
        android:gravity="center_horizontal"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match3_score2"
        android:layout_alignBottom="@+id/textView_match3_team2"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView_match2_score"
        android:layout_alignLeft="@+id/textView_match2_score2"
        android:layout_alignStart="@+id/textView_match2_score2" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/textView_match4_score2"
        android:layout_below="@+id/textView_match3_score2"
        android:layout_alignLeft="@+id/textView_match3_score2"
        android:layout_alignStart="@+id/textView_match3_score2"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView_match4_score" />

</RelativeLayout>
